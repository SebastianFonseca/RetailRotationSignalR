<UserControl x:Class="Client.Main.Utilities.LineTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Main.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="0,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="100" TextChanged="TextBox_TextChanged" BorderThickness="0,0,0,5" BorderBrush="Black"/>
    </Grid>
</UserControl>
